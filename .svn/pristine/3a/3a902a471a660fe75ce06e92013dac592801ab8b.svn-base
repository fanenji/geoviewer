
.olControlLoadingPanel {
    background-image:url("icons/loading.gif");
/*    margin-left: 40%;
    margin-top: 25%;*/
    margin-left: 1px;
    margin-top: 1px;
    position: relative;
    width: 195px;
    height: 11px;
    background-position:center;
    background-repeat:no-repeat;
    display: none;
}

.olImageLoadError {
    background-color: transparent !important;
}


