    onStrokeDashStyleChange: function(field, newValue, thumb, eOpts) {
        var dashStyleLine = this.getDashLine(),
            dashStyleSpace = this.getDashSpace();

        if (dashStyleLine && dashStyleSpace) {
            if (dashStyleLine.getValue() && dashStyleSpace.getValue()) {
                var strokeDasharray =  dashStyleLine.getValue() + " " + dashStyleSpace.getValue();
                // LINE
                if (this.selectedRule.LineSymbolizer) {
                        setCssParameter(this.selectedRule.LineSymbolizer.Stroke,"stroke-dasharray",strokeDasharray);
                }
                // POLYGON_SIMPLE_STROKE
                if (this.selectedRule.PolygonSymbolizer) {
                    setCssParameter(this.selectedRule.PolygonSymbolizer.Stroke,"stroke-dasharray",strokeDasharray);
                }
            }
            else {
                // LINE
                if (this.selectedRule.LineSymbolizer) {
                    setCssParameter(this.selectedRule.LineSymbolizer.Stroke,"stroke-dasharray","");
                }
                // POLYGON_SIMPLE_STROKE
                if (this.selectedRule.PolygonSymbolizer) {
                    setCssParameter(this.selectedRule.PolygonSymbolizer.Stroke,"stroke-dasharray","");
                }
            }
        }
        this.setEditedLayerFlag(this.selectedLayer.name);
    },

    setEditedLayerFlag: function (layerName) {
        var layersConfig = this.layersConfig;
        Ext.each(layersConfig, function(layerConfig) {
            if (layerConfig.name === layerName) {
                layerConfig.edited = true;
            }
        });
    },
        
    onClick: function() {
        var win = this.getWin(),
            button = this.getButton(),
            me = this;

        if (!win) {
            var layers = me.buildLayersConfig(button.config);
            if (!layers) {
                CWN2.Util.msgBox("Attenzione: Nessun livello disponibile");
                return;
            }
            win = Ext.create('CWN2.button.GeoStyler.Window', {
                layersConfig: me.layersConfig
            });
        }
        this.showHideWin(win, CWN2.app.layout.mapPanel);

    },

    showHideWin: function(win, mapPanel) {
        if (!win.isVisible()) {
            win.show();
            win.alignTo(mapPanel.body, "tl-tl", [10, 10]);
        } else {
            win.hide();
        }
    },

    buildLayersConfig: function(config) {
        var me = this;
        var idMap = parseInt(config.options.idMap);
        var layersConfig = CWN2.app.map.layerManager.overlayLayersConfig;
        me.layersConfig = [];
        Ext.each(layersConfig, function(layerConfig) {
            var layer = Ext.clone(layerConfig);
            if (layer.geomType === "VECTOR" && layer.idMap === idMap) {
                me.layersConfig.push({
                    name: layer.name,
                    label: layer.legend.label,
                    id: layer.id,
                    sld: layer.sld,
                    edited: false,
                    geomType: layer.geomSubType
                })
            }
        });
        if (me.layersConfig.length > 0) {
            me.layersConfig.reverse();
            me.selectedLayer = me.layersConfig[0];
            me.selectedRule = me.selectedLayer.sld.StyledLayerDescriptor.NamedLayer.UserStyle.FeatureTypeStyle.Rule[0];
            return true;
        } else {
            return false;
        }

    },

    onLayerSelect: function(combo, records, eOpts) {
        var me = this;

        me.selectedLayer = records[0].data;
        me.selectedRule = me.selectedLayer.sld.StyledLayerDescriptor.NamedLayer.UserStyle.FeatureTypeStyle.Rule[0];

        //ricarico panel
        this.reloadRuleCombo();
        this.reloadTabPanel();
    },

    onRuleSelect: function(combo, records, eOpts) {
        var me = this;
        // imposto la rule selezionata
        me.selectedRule = records[0].data;
        //ricarico panel
        this.reloadTabPanel();
    },

    reloadRuleCombo: function() {
        var me = this;
        Ext.suspendLayouts();
        var panel = me.getPanel();
        panel.remove(me.getRuleCombo());
        panel.add({
            xtype: 'cwn2-btn-geostyler-rule-combo',
            layer: me.selectedLayer
        });
        Ext.resumeLayouts(true);
    },

    reloadTabPanel: function() {
        var me = this;
        Ext.suspendLayouts();
        var panel = this.getPanel();
        panel.remove(this.getTabPanel());
        panel.add({
            xtype: 'cwn2-btn-geostyler-tab-panel',
            rule: me.selectedRule,
            geomType: me.selectedLayer.geomType
        });
        Ext.resumeLayouts(true);
    },

    onStrokeTypeSelect: function(combo, records, eOpts) {
        var me = this,
            strokeType = records[0].data.field1,
            strokeTab;

        //controllo fill/stroke
        if (me.getFillTypeCombo()) {
            var fillType = me.getFillTypeCombo().getValue();
            if (fillType === "None" && strokeType === "None") {
                CWN2.Util.msgBox("Attenzione: Stroke e Fill non possono essere entrambi non impostati");
                combo.setValue(combo.previousValue);
                return;
            }
        }

        combo.previousValue = strokeType;

        //ricarico panel
        Ext.suspendLayouts();
        var panel = this.getStrokePanel();
        panel.remove(panel.items.items[1]);
        var symbolizer = me.selectedRule.LineSymbolizer || me.selectedRule.PolygonSymbolizer;

        if (strokeType === "None") {
            // Se stile attuale  di tipo STROKE_* levo elemento Stroke
            if (me.selectedRule.PolygonSymbolizer && me.selectedRule.PolygonSymbolizer.Stroke) {
                var fill = me.selectedRule.PolygonSymbolizer.Fill;
                me.selectedRule.PolygonSymbolizer = {
                    "Fill": fill
                }
            }
        }
        if (strokeType === "Simple") {
            // Se stile attuale  di tipo STROKE_NONE o STROKE_GRAPHIC cambio in STROKE_SIMPLE di default
            if ((!symbolizer.Stroke) || (symbolizer.Stroke.GraphicStroke) ) {
                symbolizer.Stroke =  Ext.clone(this.defaultSimpleStrokeStyle);
            }
            strokeTab = {xtype: "cwn2-btn-geostyler-simple-stroke-panel",rule: me.selectedRule};
            panel.add(strokeTab);
        }
        if (strokeType === "WKN") {
            // Se stile attuale  di tipo STROKE_NONE o STROKE_SIMPLE cambio in STROKE_SIMPLE di default
            if ((!symbolizer.Stroke) || (!symbolizer.Stroke.GraphicStroke) ) {
                symbolizer.Stroke = Ext.clone(this.defaultWKNStrokeStyle);
            }
            strokeTab = {xtype: "cwn2-btn-geostyler-wkn-stroke-panel",rule: me.selectedRule};
            panel.add(strokeTab);
        }

        Ext.resumeLayouts(true);
    },

    onFillTypeSelect: function(combo, records, eOpts) {
        var me = this,
            fillType = records[0].data.field1,
            fillTab;

        //controllo fill/stroke
        var strokeType = me.getStrokeTypeCombo().getValue();
        if (fillType === "None" && strokeType === "None") {
            CWN2.Util.msgBox("Attenzione: Stroke e Fill non possono essere entrambi non impostati");
            combo.setValue(combo.previousValue);
            return;
        }

        combo.previousValue = fillType;

        //ricarico panel
        Ext.suspendLayouts();
        var panel = this.getFillPanel();
        panel.remove(panel.items.items[1]);

        var symbolizer = me.selectedRule.PolygonSymbolizer;

        if (fillType === "None") {
            // Se stile attuale  di tipo STROKE_* levo elemento Stroke
            if (symbolizer && symbolizer.Fill) {
                var stroke = symbolizer.Stroke;
                symbolizer = {
                    "Stroke": stroke
                }
            }
        }
        if (fillType === "Simple") {
            // Se stile attuale non  di tipo FILL_SIMPLE imposto FILL_SIMPLE di default
            if ((!symbolizer.Fill) || (symbolizer.Fill.GraphicFill) ) {
                symbolizer.Fill =  Ext.clone(this.defaultSimpleFillStyle);
            }
            fillTab = {xtype: "cwn2-btn-geostyler-simple-fill-panel",rule: me.selectedRule};
            panel.add(fillTab);
        }
        if (fillType === "Graphic") {
            // Se stile attuale non  di tipo FILL_GRAPHIC imposto FILL_GRAPHIC di default
            if ((!symbolizer.Fill) || (!symbolizer.Fill.GraphicFill) || (!symbolizer.Fill.GraphicFill.Graphic.ExternalGraphic) ) {
                symbolizer.Fill =  Ext.clone(this.defaultGraphicFillStyle);
            }
            fillTab = {xtype: "cwn2-btn-geostyler-graphic-fill-panel",rule: me.selectedRule};
            panel.add(fillTab);
        }
        if (fillType === "Hatch") {
            // Se stile attuale non  di tipo FILL_HATCH imposto FILL_HATCH di default
            if ((!symbolizer.Fill) || (!symbolizer.Fill.GraphicFill) || (!symbolizer.Fill.GraphicFill.Graphic.Mark) ) {
                symbolizer.Fill =  Ext.clone(this.defaultHatchFillStyle);
            }
            fillTab = {xtype: "cwn2-btn-geostyler-hatch-fill-panel",rule: me.selectedRule};
            panel.add(fillTab);
        }
        Ext.resumeLayouts(true);
    },

    onPointTypeSelect: function(combo, records, eOpts) {
        var me = this,
            pointType = records[0].data.field1,
            pointTab;
        //ricarico panel
        Ext.suspendLayouts();
        var panel = this.getPointPanel();
        panel.remove(panel.items.items[1]);
        if (pointType === "WKN") {
            // Se stile attuale  di tipo POINT_GRAPHIC cambio stile e imposto lo stile POINT_WKN di default
            if (me.selectedRule.PointSymbolizer.Graphic.ExternalGraphic) {
                me.selectedRule.PointSymbolizer.Graphic =  Ext.clone(this.defaultWKNPointStyle);
            }
            pointTab = {xtype: "cwn2-btn-geostyler-wkn-point-panel",rule: me.selectedRule};
        }
        if (pointType === "Graphic") {
            // Se stile attuale  di tipo POINT_WKN cambio stile e imposto lo stile POINT_GRAPHIC di default
            if (me.selectedRule.PointSymbolizer.Graphic.Mark) {
                me.selectedRule.PointSymbolizer.Graphic =  Ext.clone(this.defaultGraphicPointStyle);
            }
            pointTab = {xtype: "cwn2-btn-geostyler-graphic-point-panel",rule: me.selectedRule};
        }
        panel.add(pointTab);
        Ext.resumeLayouts(true);
    },


