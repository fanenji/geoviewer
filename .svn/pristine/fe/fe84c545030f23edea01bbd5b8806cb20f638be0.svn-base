    onExternalGraphicUrlChange: function(field, newValue, oldValue, eOpts) {
        // POINT_GRAPHIC
        if (this.selectedRule.PointSymbolizer) {
            this.selectedRule.PointSymbolizer.Graphic.ExternalGraphic.OnlineResource["_xlink:href"] = newValue;
        }
        // POLYGON_GRAPHIC
        if (this.selectedRule.PolygonSymbolizer) {
            this.selectedRule.PolygonSymbolizer.Fill.GraphicFill.Graphic.ExternalGraphic.OnlineResource["_xlink:href"] = newValue;
        }
        this.setEditedLayerFlag(this.selectedLayer.name);
    },


    setFillParam: function(param,newValue) {
        // POINT_WNK
        if (this.selectedRule.PointSymbolizer) {
            setCssParameter(this.selectedRule.PointSymbolizer.Graphic.Mark.Fill,param,newValue);
        }
        // LINE_WKN
        if (this.selectedRule.LineSymbolizer) {
            setCssParameter(this.selectedRule.LineSymbolizer.Stroke.GraphicStroke.Graphic.Mark.Fill,param,newValue);
        }
        // POLYGON_SIMPLE_FILL
        if (this.selectedRule.PolygonSymbolizer) {
            setCssParameter(this.selectedRule.PolygonSymbolizer.Fill,param,newValue);
        }
        this.setEditedLayerFlag(this.selectedLayer.name);
    },

    onFillColorFieldChange: function(field, newValue, oldValue, eOpts) {
        this.setFillParam("fill",newValue);
        this.setEditedLayerFlag(this.selectedLayer.name);
    },

    onHatchFillColorFieldChange: function(field, newValue, oldValue, eOpts) {
        setCssParameter(this.selectedRule.PolygonSymbolizer.Fill.GraphicFill.Graphic.Mark.Fill,"fill",newValue);
        this.setEditedLayerFlag(this.selectedLayer.name);
    },

    onFillOpacitySliderChange: function(slider, newValue, thumb, eOpts) {
        this.setFillParam("fill-opacity",newValue/100);
        this.setEditedLayerFlag(this.selectedLayer.name);
    },

    onHatchFillOpacitySliderChange: function(slider, newValue, thumb, eOpts) {
        setCssParameter(this.selectedRule.PolygonSymbolizer.Fill.GraphicFill.Graphic.Mark.Fill,"fill-opacity",newValue/100);
        this.setEditedLayerFlag(this.selectedLayer.name);
    },

    onSymbolComboSelect: function(combo, records, eOpts) {
        // POINT_WNK
        if (this.selectedRule.PointSymbolizer) {
            this.selectedRule.PointSymbolizer.Graphic.Mark.WellKnownName = records[0].data.field1;
        }
        // LINE_WKN
        if (this.selectedRule.LineSymbolizer) {
            this.selectedRule.LineSymbolizer.Stroke.GraphicStroke.Graphic.Mark.WellKnownName = records[0].data.field1;
        }
        this.setEditedLayerFlag(this.selectedLayer.name);
    },

    onHatchComboSelect: function(combo, records, eOpts) {
        this.selectedRule.PolygonSymbolizer.Fill.GraphicFill.Graphic.Mark.WellKnownName = records[0].data.field1;
        this.setEditedLayerFlag(this.selectedLayer.name);
    },

    onSymbolSizeChange: function(field, newValue, oldValue, eOpts) {
        if (this.selectedRule.PointSymbolizer) {
            this.selectedRule.PointSymbolizer.Graphic.Size =  newValue;
        }
        if (this.selectedRule.LineSymbolizer) {
            this.selectedRule.LineSymbolizer.Stroke.GraphicStroke.Graphic.Size =  newValue;
        }
        if (this.selectedRule.PolygonSymbolizer) {
            //this.selectedRule.PolygonSymbolizer.Fill.GraphicFill.Graphic.Size =  newValue;
        }
        this.setEditedLayerFlag(this.selectedLayer.name);
    },

    setStrokeParam: function(param,newValue) {
        // POINT_WNK
        if (this.selectedRule.PointSymbolizer) {
            setCssParameter(this.selectedRule.PointSymbolizer.Graphic.Mark.Stroke,param,newValue);
        }
        // LINE
        if (this.selectedRule.LineSymbolizer && this.selectedRule.LineSymbolizer.Stroke) {
            if (this.selectedRule.LineSymbolizer && this.selectedRule.LineSymbolizer.Stroke.GraphicStroke) {
                // LINE_WNK
                setCssParameter(this.selectedRule.LineSymbolizer.Stroke.GraphicStroke.Graphic.Mark.Stroke,param,newValue);
            } else {
                // LINE_SIMPLE
                setCssParameter(this.selectedRule.LineSymbolizer.Stroke,param,newValue);
            }
        }
        // POLYGON_STROKE
        if (this.selectedRule.PolygonSymbolizer) {
            setCssParameter(this.selectedRule.PolygonSymbolizer.Stroke,param,newValue);
        }
    },


    onStrokeColorFieldChange: function(field, newValue, oldValue, eOpts) {
