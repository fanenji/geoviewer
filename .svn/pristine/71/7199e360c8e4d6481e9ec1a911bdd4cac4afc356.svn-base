<?xml version="1.0" encoding="UTF-8"?>
<project name="geoviewer" default="all">
  
  
  <property file="geoviewer.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  
  <!-- Global Libraries -->
  
  <path id="library.sass-stdlib.classpath"/>
  
  
  <!-- Application Server Libraries -->
  
  <!-- Modules -->
  
  
  <!-- Module geoviewer -->
  
  <dirname property="module.geoviewer.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.geoviewer" value="${compiler.args}"/>
  
  <property name="geoviewer.output.dir" value="${module.geoviewer.basedir}/out/production/geoviewer"/>
  <property name="geoviewer.testoutput.dir" value="${module.geoviewer.basedir}/out/test/geoviewer"/>
  
  <path id="geoviewer.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="geoviewer.module.production.classpath">
    <path refid="library.sass-stdlib.classpath"/>
  </path>
  
  <path id="geoviewer.runtime.production.module.classpath">
    <pathelement location="${geoviewer.output.dir}"/>
  </path>
  
  <path id="geoviewer.module.classpath">
    <pathelement location="${geoviewer.output.dir}"/>
    <path refid="library.sass-stdlib.classpath"/>
  </path>
  
  <path id="geoviewer.runtime.module.classpath">
    <pathelement location="${geoviewer.testoutput.dir}"/>
    <pathelement location="${geoviewer.output.dir}"/>
    <path refid="library.sass-stdlib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.geoviewer">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.geoviewer">
    <patternset refid="excluded.from.module.geoviewer"/>
  </patternset>
  
  
  <target name="compile.module.geoviewer" depends="compile.module.geoviewer.production,compile.module.geoviewer.tests" description="Compile module geoviewer"/>
  
  <target name="compile.module.geoviewer.production" description="Compile module geoviewer; production classes"/>
  
  <target name="compile.module.geoviewer.tests" depends="compile.module.geoviewer.production" description="compile module geoviewer; test classes" unless="skip.tests"/>
  
  <target name="clean.module.geoviewer" description="cleanup module">
    <delete dir="${geoviewer.output.dir}"/>
    <delete dir="${geoviewer.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.geoviewer" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.geoviewer" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>