                        break;
                }
            });
            win = Ext.create('CWN2.button.Find.Window', {
                items: [
                    {
                        xtype: 'cwn2-btn-find-tab-panel',
                        id: "find-tabpanel",
                        items: tabs
                    }
                ]
            });
        }
        this.showHideWin(win, mapPanel);
