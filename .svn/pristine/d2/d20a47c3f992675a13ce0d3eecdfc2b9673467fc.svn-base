                                        {
                                            xtype: 'cwn2-btn-find-operator-combo'
                                        },
                                        {
                                            xtype: 'tbfill'
                                        },
                                        {
                                            xtype: 'cwn2-btn-find-layer-value-list-btn'
                                        }
                                    ]
                                },
                                {
                                    xtype: 'cwn2-btn-find-value-field'
                                },
                                {
                                    xtype: 'cwn2-btn-find-layer-submit'
                                }
                            ]
