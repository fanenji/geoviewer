                                },
                                {
                                    xtype: 'cwn2-btn-find-srs-combo'
                                },
                                {
                                    xtype: 'cwn2-btn-find-x-field'
                                },
                                {
                                    xtype: 'cwn2-btn-find-y-field'
                                },
