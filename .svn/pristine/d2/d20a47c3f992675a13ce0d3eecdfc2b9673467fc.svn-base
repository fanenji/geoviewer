                        break;
                    case "layer":
                        me.buildLayersConfig(panelConfig.options);
                        tabs.push({
                            xtype: 'cwn2-btn-find-layer-panel',
                            title: CWN2.I18n.get(panelConfig.name),
                            items: [
                                {
                                    xtype: 'cwn2-btn-find-layer-combo',
                                    layersConfig: me.layersConfig
                                },
                                {
                                    xtype: 'cwn2-btn-find-column-combo',
