                                }
                            ]
                        });
                        break;
                    case "indirizzo":
                        tabs.push({
                            xtype: 'cwn2-btn-find-address-panel',
                            title: CWN2.I18n.get(panelConfig.name),
                            items: [
                                {
                                    xtype: 'cwn2-geocoder-combobox',
                                    map: mapPanel.map,
                                    service: "google",
                                    configOptions: panelConfig.options,
                                    width: 200
                                }
